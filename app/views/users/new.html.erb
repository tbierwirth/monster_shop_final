<%= form_for(@user, url: users_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.fields_for :user_addresses do |user_address| %>
       <%= user_address.label :address %>
       <%= user_address.text_field :address %>

       <%= user_address.label :city %>
       <%= user_address.text_field :city %>

       <%= user_address.label :state %>
       <%= user_address.text_field :state %>

       <%= user_address.label :zip %>
       <%= user_address.text_field :zip %>

       <%= user_address.label :alias %>
       <%= user_address.text_field :alias %>

   <% end %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Register' %>
<% end %>
