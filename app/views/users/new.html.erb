<%= form_for @user, url: users_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.fields_for :user_addresses do |field| %>
       <%= field.label :address %>
       <%= field.text_field :address %>

       <%= field.label :city %>
       <%= field.text_field :city %>

       <%= field.label :state %>
       <%= field.text_field :state %>

       <%= field.label :zip %>
       <%= field.text_field :zip %>

   <% end %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Register' %>
<% end %>
